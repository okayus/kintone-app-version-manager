{
  "name": "kintone-app-version-manager",
  "version": "1.0.0",
  "type": "module",
  "description": "kintoneアプリのバージョン管理を行うプラグイン",
  "scripts": {
    "start": "node scripts/npm-start.js",
    "generate-key": "node scripts/generate-key.js",
    "dev": "vite build -c vite.config.ts --watch",
    "build": "vite build -c vite.config.ts && mv dist/js/desktop.js plugin/js && rm -rf dist && kintone-plugin-packer --ppk private.ppk --out plugin/plugin.zip plugin",
    "build:prod": "vite build -c vite.config.ts && mv dist/js/desktop.js plugin/js && rm -rf dist && kintone-plugin-packer --ppk private.prod.ppk --out plugin/plugin.prod.zip plugin",
    "upload": ". ./.env && kintone-plugin-uploader dist/plugin.zip --base-url $KINTONE_BASE_URL --username $KINTONE_USERNAME --password $KINTONE_PASSWORD",
    "upload:prod": ". ./.env && kintone-plugin-uploader plugin/plugin.prod.zip --base-url $KINTONE_BASE_URL --username $KINTONE_USERNAME --password $KINTONE_PASSWORD",
    "lint": "eslint src",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.22.17",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@cybozu/eslint-config": "^23.0.0",
    "@kintone/dts-gen": "^8.0.12",
    "@kintone/plugin-packer": "^8.1.2",
    "@kintone/plugin-uploader": "^9.1.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^22.9.0",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "jsdom": "^25.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^6.2.0",
    "vite-tsconfig-paths": "^5.1.2",
    "vitest": "^3.0.6"
  },
  "dependencies": {
    "@kintone/rest-api-client": "^5.5.1"
  }
}